#!/bin/rc

rfork e

root=$home/lib/9legacy
flagfmt='r root'
if(! ifs=() eval `{aux/getflags $*}){
	aux/usage
	exit usage
}
if(~ $#flagr 1)
	root=$flagr
cache=$root/cache
url=http://9legacy.org/9legacy/patch

if(! ~ $#* 1){
	aux/usage
	exit usage
}

mkdir -p $cache
if(test -s $cache/$1.diff)
	exit ''
if(! hget $url/$1.diff >$cache/$1.diff){
	rm -f $cache/$1.diff
	exit fetch
}
exit ''
